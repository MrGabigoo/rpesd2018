{% trans_default_domain 'FOSUserBundle' %}

<div class="container fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Elo: {{ user.elo }}</p>
    <p>Rang: {{ user.rank }}</p>
    {% if user.imageName is empty %}
        <img src="{{ gravatar(user.email) }}" />
    {% else %}
        <img src="{{ asset('uploads/images/profile/' ~ user.imageName) }}" alt="image de {{ user.username }}" width="150px">
    {% endif %}
    <br/><br/>
</div>

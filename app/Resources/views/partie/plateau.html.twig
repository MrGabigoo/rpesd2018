                    <input type="hidden" name="cartes[]" value="{{ cartes[carte-1].id }}">
                    <input type="hidden" name="action" value="concurrence_choix">
                {% else %}
                    <input type="hidden" name="cartes[]" value="{{ cartes[carte-1].id }}">
